<CustomButton@ButtonBehavior+Label>:
    markup: True
    font_name:"Bahnschrift"
    #blue
    bg_color:128/255,184/255,222/255,1
    color:0,0,0,1

    #change color at press of button
    on_press:self.bg_color=255/255,102/255,102/255,1#red
    on_release:self.bg_color=128/255,184/255,222/255,1#blue

    canvas.before:
        Color:
            rgba: self.bg_color
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: 10,

<CustomLabel@Label>:
    font_name:"Bahnschrift"


<CustomTextInput@TextInput>:
    highlight_color_1:0,0,0,1#128/255,184/255,222/255,1  #blue
    highlight_color_2: 255/255,102/255,102/255,1 #red
    bottom_color: root.highlight_color_1
    size_hint: 1, .7
    pos_hint: {"top": .7, "right": 1}
    opacity:0.7
    canvas.before:
        Color:
            rgba: self.bottom_color if self.bottom_color else (0,0,0,1)

        # rectangle on textinput
        Rectangle:
            size: (self.size[0], self.size[1]/15.)
            pos: self.pos
    opacity_full:1
    opacity_dimmed:0.7

    on_focus:
        self.opacity = root.opacity_full if self.focused else root.opacity_dimmed
        self.bottom_color = root.highlight_color_2 if self.focused else root.highlight_color_1
